<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_btn_send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送数据"
        app:layout_constraintEnd_toEndOf="@id/main_btn_bind_service"
        app:layout_constraintStart_toStartOf="@id/main_btn_bind_service"
        app:layout_constraintTop_toBottomOf="@id/main_btn_bind_service" />

    <Button
        android:id="@+id/main_btn_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑服务"
        app:layout_constraintEnd_toEndOf="@id/main_btn_bind_service"
        app:layout_constraintStart_toStartOf="@id/main_btn_bind_service"
        app:layout_constraintTop_toBottomOf="@id/main_btn_send_data" />

    <Button
        android:id="@+id/mainBtnTestWatermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水印测试"
        app:layout_constraintEnd_toEndOf="@id/main_btn_bind_service"
        app:layout_constraintStart_toStartOf="@id/main_btn_bind_service"
        app:layout_constraintTop_toBottomOf="@id/main_btn_unbind_service" />

    <Button
        android:id="@+id/mainBtnTestGLCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水印相机"
        app:layout_constraintEnd_toEndOf="@id/main_btn_bind_service"
        app:layout_constraintStart_toStartOf="@id/main_btn_bind_service"
        app:layout_constraintTop_toBottomOf="@id/mainBtnTestWatermark" />

</androidx.constraintlayout.widget.ConstraintLayout>